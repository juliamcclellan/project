class Event < Entry
  
  def initialize(name_event, time_event)
    @name_event = name_event
    @time_event = time_event
  end
  
  #def add_event_detail(name_detail, detail)
  #  @#{name_detail} = detail
  #end
  
  def eventString
    "#{name_event}(#{entry}) will happen at #{time_event}, hosted by #{name}"
    #Note that no return statement is needed because Ruby without a return statement, ruby by default returns the last evaluated expression 
  end
  
end
